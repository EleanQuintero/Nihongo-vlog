---
import Layout from '../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
	const posts = await getCollection('posts');
	return posts.map((post) => ({
		params: { id: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props; 
const { data, slug } = post;
const { title, description, img} = data;

const { Content } = await render(post)

---

<Layout title={`${title} - Nihongo Blog`}>
    <div class=" justify-center md:gap-9 md:grid md:grid-cols-2 md:grid-rows-1">
        <aside class="sm:h-3/6">
            <img
                transition:name={`img-${slug}`} 
                src={img} 
                alt={title} 
                class="sm:mx-40 aspect-auto my-5 sm:w-3/5 md:w-4/5 rounded-lg" />
        </aside>
        
        <main>
            <h1 class="text-3xl font-extrabold text-justify justify-center my-5 md:grid md:grid-cols-1 md:text-4xl">{title}</h1>
            <div class="prose prose-invert">
                <Content />
            </div>
        </main>
    </div>
</Layout>