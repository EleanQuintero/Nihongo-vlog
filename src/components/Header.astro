--- 
import MenuIcon from "../icons/MenuIcon.astro";
import NavBar from "./NavBar.astro";
import MobileNavBar from "./MobileNavBar.astro";

---

<header class="px-4 mx-auto max-w-screen-lg lg:py-10 lg:px-6">
    <div class="mx-auto text-center nb-8 lg:nb-16">
        <div class="inline-flex items-center">
            <h2 class="nb-4 mr-7 text-4xl sm:text-5xl tracking-tight font-extrabold text-white">
                Nihongo Blog
            </h2>
            <div class="flex sm:hidden">
                <label for="menu-toggle" class="sr-only">Abrir men√∫</label>
                <input type="checkbox" id="menu-toggle" class="hidden" />
                <MenuIcon />
                <MobileNavBar />
            </div>
        </div>
        <p class=" text-xl my-4 font-light text-gray-500 sm:text-xl dark:text-gray-400">
            Todo lo que necesitas saber para empezar tu ruta de aprendizaje de japones!
        </p>
        <NavBar />
    </div>
</header>

<style is:global>

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        
        transform: translateY(0);
    }
}

@keyframes fadeOut {
    from {
        opacity: 1;
        transform: translateY(0);
    }
    to {
        opacity: 0;
        transform: translateY(-20px);
    }
}

#menu-toggle:checked ~ #mobile-navbar {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 10;
    animation: fadeIn 0.5s forwards;
}

#menu-toggle:not(:checked) ~ #mobile-navbar {
    animation: fadeOut 0.5s forwards;
}

#menu-toggle:checked ~ #menu-icon {
    display: none;
}
</style>